local dot=(
'   '
'   '
'   '
' _ '
'(_)'
'   '
)
local dash=(
'       '
'       '
' _____ '
'|_____|'
'       '
'       '
)

local output=() char line var
# Loop through each input character
while read -rn1 char
do
	# Skip trailing newline
	[[ $char ]] || continue

	# Convert character to array name
        if [[ $char == [0-9] ]]
	then
		char="n$char"

	elif [[ $char == '.' ]]
        then
		char='dot'

	elif [[ $char == '-' ]]
	then
        	char='dash'
	fi
	# Loop through output lines
	for line in {0..5}
	do
		# Assign array name with line index to variable for indirect expansion
		var="${char}[$line]"
		# Append to output line
	        output[$line]+=${!var}
	done

done <<< "$1"

# Print output array in multiple lines
printf '%s\n' "${output[@]}"
}

# Check for invalid input characters
# shellcheck disable=SC2015
[[ $1 == *[^[:alnum:].-]* ]] && echo 'ERROR: Character outside of range "a-zA-Z0-9.-" found. Aborting...' || print_large "$1"
