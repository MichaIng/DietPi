	#	MAX_G_HW_MODEL=72
	#	MAX_G_HW_ARCH=10
	#	MAX_G_DISTRO=5
	#
	# - Line1 -
	# G_HW_MODEL 72 ROCK Pi 4
	# G_HW_MODEL 71 Beagle Bone Black
	# G_HW_MODEL 70 Sparky SBC
