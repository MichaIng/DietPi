After=network-online.target

[Service]
SyslogIdentifier=Lidarr
User=lidarr
UMask=002
ExecStart=$(command -v mono) -O=-aot /opt/Lidarr/Lidarr.exe -nobrowser -data=$G_FP_DIETPI_USERDATA/lidarr
TimeoutStopSec=20
KillMode=process
Restart=on-failure

