			;;
			LinuxDash)
				if (( $LINUXDASH == 0 )); then
					LINUXDASH=1
					INSTALL_DIETPI_CHOICESMADE=1
				fi
			;;
			"LXDE: Desktop")
				if (( $DESKTOP_LXDE == 0 )); then
					DESKTOP_LXDE=1
					INSTALL_DIETPI_CHOICESMADE=1
				fi
			;;
			Kodi)
				if (( $KODI == 0 )); then
					KODI=1
					INSTALL_DIETPI_CHOICESMADE=1
				fi
			;;
			OpenTyrian)
				if (( $OPENTYRIAN == 0 )); then
					OPENTYRIAN=1
