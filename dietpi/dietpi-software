			# ARMv6/7
			local arch='armhf'

			# ARMv8
			if (( $G_HW_ARCH == 3 )); then

				arch='arm64'

			# x86_64
			elif (( $G_HW_ARCH == 10 )); then

				arch='amd64'

			fi

			local fallback_url="https://github.com/remoteit/installer/releases/download/v2.6.39/connectd_2.6.39_$arch.deb"
