		software_id=98 # HAProxy
		if (( ${aSOFTWARE_INSTALL_STATE[$software_id]} == 1 )); then

			Banner_Installing

			local version='2.1.7'
			DEPS_LIST='libpcre3-dev libssl-dev zlib1g-dev libsystemd-dev'
			Download_Install "https://www.haproxy.org/download/${version%.*}/src/haproxy-$version.tar.gz"

			# Compile
			G_EXEC cd haproxy-$version
			make -j "$G_HW_CPU_CORES" TARGET=linux-glibc CPU=generic USE_PCRE=1 USE_OPENSSL=1 USE_ZLIB=1 USE_SYSTEMD=1 ADDLIB='-Wl,--no-as-needed -lgcc_s -Wl,--as-needed' DEBUG_CFLAGS='-O3' LDFLAGS='-Wl,-z,relro -Wl,-z,now -Wl,--as-needed'
			# Strip binary size
			strip --remove-section=.comment --remove-section=.note haproxy
			# Install
			make install
			# - systemd unit
			G_EXEC cd contrib/systemd
			make
			mv haproxy.service /etc/systemd/system/
			# - Error pages
			G_EXEC cd /tmp/$G_PROGRAM_NAME
			mkdir -p /etc/haproxy/errors/
			mv haproxy-$version/examples/errorfiles/*.http /etc/haproxy/errors/
			# Clean up
			rm -R haproxy-$version

		fi

