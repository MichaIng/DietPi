			[[ -d '/etc/systemd/system/frps.service.d' ]] && G_EXEC rm -R /etc/systemd/system/frps.service.d

			# Binaries and configs
			[[ -f '/usr/local/bin/frpc' ]] && G_EXEC rm /usr/local/bin/frpc
			[[ -f '/usr/local/bin/frps' ]] && G_EXEC rm /usr/local/bin/frps
