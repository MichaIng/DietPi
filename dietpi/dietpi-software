				fi
			;;
			"DietPi-Cloudshell")
				if (( $DIETPICLOUDSHELL == 0 )); then
					DIETPICLOUDSHELL=1
					INSTALL_DIETPI_CHOICESMADE=1
				fi
			;;
			WebIOPi)
				if (( $WEBIOPI == 0 )); then
					WEBIOPI=1
					INSTALL_DIETPI_CHOICESMADE=1
				fi
			;;
			Weaved)
				if (( $WEAVED == 0 )); then
					WEAVED=1
					INSTALL_DIETPI_CHOICESMADE=1
				fi
			;;
			"Pi-hole")
				if (( $PIHOLE == 0 )); then
					PIHOLE=1
					INSTALL_DIETPI_CHOICESMADE=1
