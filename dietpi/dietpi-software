		#------------------
		software_id=29

		aSOFTWARE_NAME[$software_id]='XRDP'
		aSOFTWARE_DESC[$software_id]='remote desktop protocol (rdp) server'
		aSOFTWARE_CATEGORY_INDEX[$software_id]=1
