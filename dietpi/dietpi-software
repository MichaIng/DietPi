_EOF_
			# Add Mycroft binaries to $PATH
			cat << '_EOF_' > /etc/bashrc.d/mycroft.sh
#!/bin/dash
export PATH=$PATH:/mnt/dietpi_userdata/mycroft-core/bin
_EOF_

		fi

    software_id=181 # PaperMC
		if (( ${aSOFTWARE_INSTALL_STATE[$software_id]} == 1 )); then

			Banner_Configuration
      
      Create_User -d /opt/papermc papermc # This creates a system user named papermc with /opt/papermc as its home dir.
      # Bedrock compatibility
      G_WHIP_BUTTON_OK_TEXT='YES'
			G_WHIP_BUTTON_CANCEL_TEXT='NO'
      if G_WHIP_YESNO "Would you like to install the Geyser and Floodgate plugins for compatibility with Bedrock Edition?
      \n Note that this may be buggy."; then
          Download_Install 'https://ci.nukkitx.com/job/GeyserMC/job/Geyser/job/master/lastSuccessfulBuild/artifact/bootstrap/spigot/target/Geyser-Spigot.jar' /opt/papermc/plugins/Geyser-Spigot.jar
          Download_Install 'https://ci.nukkitx.com/job/GeyserMC/job/Floodgate/job/development/lastSuccessfulBuild/artifact/bukkit/target/floodgate-bukkit.jar' /opt/papermc/plugins/floodgate-bukkit.jar
      fi
      G_EXEC cd /opt/papermc
      G_EXEC_OUTPUT=1 G_EXEC java -jar /opt/papermc/paperclip.jar nogui
      G_CONFIG_INJECT 'eula=' 'eula=true' /opt/papermc/eula.txt
      G_EXEC chown -R papermc /opt/papermc
      Download_Install https://github.com/Tiiffi/mcrcon/archive/v0.7.1.zip /opt/papermc/mcrcon.zip G_EXEC unzip /opt/papermc/mcrcon.zip G_EXEC rm /opt/papermc/mcrcon.zip
      G_EXEC gcc /opt/papermc/mcrcon-0.71/mcrcon.c -o /usr/local/bin/mcrcon
      G_EXEC rm -r /opt/papermc/mcrcon-0.71
      G_CONFIG_INJECT 'enable-rcon=' 'enable-rcon=true'
      G_CONFIG_INJECT 'rcon.password=' "rcon.password=$GLOBAL_PW"
      # Service
      cat << _EOF_ > /etc/systemd/system/papermc.service
[Unit]
Description=papermc (DietPi)

[Service]
User=papermc
SyslogIdentifier=papermc
WorkingDirectory=/opt/papermc
ExecStart=$(command -v java) -jar /opt/papermc/paperclip.jar nogui
ExecStop=$(command -v mcrcon) -p $GLOBAL_PW stop

[Install]
WantedBy=multi-user.target
_EOF_

      if [[ -f '/opt/papermc/plugins/Geyser-Spigot.jar' ]] && [[ -f '/opt/papermc/plugins/floodgate-bukkit.jar' ]]
      then
        Create_Config /opt/papermc/plugins/Geyser-Spigot/config.yml papermc 115
        G_CONFIG_INJECT 'auth-type:[[:blank:]]' 'auth-type: floodgate' /opt/papermc/plugins/Geyser-Spigot/config.yml
      else
        Create_Config /opt/papermc/permissions.yml papermc 25
      fi
    fi

		software_id=100 # PiJuice
		if (( ${aSOFTWARE_INSTALL_STATE[$software_id]} == 1 )); then

			Banner_Configuration

			# RPi enable I2C required for GUI
			(( $G_HW_MODEL < 10 )) && /boot/dietpi/func/dietpi-set_hardware i2c enable

			G_EXEC mkdir -p /var/lib/dietpi/dietpi-software/installed/pijuice
			echo -e '#!/bin/dash\npoweroff' > /var/lib/dietpi/dietpi-software/installed/pijuice/pijuice_func1.sh
			G_EXEC chmod +x /var/lib/dietpi/dietpi-software/installed/pijuice/pijuice_func1.sh

			cat << _EOF_ > /var/lib/pijuice/pijuice_config.JSON
{
  "system_events": {
    "low_battery_voltage": {
      "function": "SYS_FUNC_HALT",
      "enabled": true
    },
    "low_charge": {
      "function": "NO_FUNC",
      "enabled": true
    },
    "button_power_off": {
      "function": "USER_FUNC1",
      "enabled": true
    },
    "forced_power_off": {
      "function": "USER_FUNC2",
      "enabled": false
    },
    "no_power": {
      "function": "SYS_FUNC_HALT_POW_OFF",
      "enabled": true
    },
    "forced_sys_power_off": {
      "function": "USER_FUNC3",
      "enabled": false
    },
    "watchdog_reset": {
      "function": "USER_EVENT",
      "enabled": true
    }
  },
  "user_functions": {
    "USER_FUNC1": "/var/lib/dietpi/dietpi-software/installed/pijuice/pijuice_func1.sh",
    "USER_FUNC2": "/var/lib/dietpi/dietpi-software/installed/pijuice/pijuice_func2.sh",
    "USER_FUNC3": "/var/lib/dietpi/dietpi-software/installed/pijuice/pijuice_func3.sh",
    "USER_FUNC4": "",
    "USER_FUNC5": "",
    "USER_FUNC6": "",
    "USER_FUNC7": "",
    "USER_FUNC8": ""
  },
  "system_task": {
    "watchdog": {
      "enabled": true,
      "period": "60"
    },
    "min_bat_voltage": {
      "threshold": "1",
      "enabled": true
    },
    "min_charge": {
      "threshold": "1",
      "enabled": true
    },
    "enabled": true,
    "wakeup_on_charge": {
      "enabled": true,
      "trigger_level": "1"
    }
  }
