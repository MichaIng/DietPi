			/DietPi/dietpi/func/check_connection "$INSTALL_URL_ADDRESS"

			#Install
			if (( $? == 0 )); then
				wget "$INSTALL_URL_ADDRESS" -O package.zip
				unzip package.zip -d /root
				rm package.zip
				mv certbot* /etc/letsencrypt_scripts

