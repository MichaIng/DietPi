		aSOFTWARE_DEPS[$software_id]='5 36 37 65 88 89 96 124 128 129 152 160 163 webserver'
		# Roon Bridge is not supported on ARMv6
		(( $G_HW_ARCH == 1 )) || aSOFTWARE_DEPS[$software_id]+=' 121'
