			#Install
			if (( $? == 0 )); then

				#Download HAPROXY
				wget "$INSTALL_URL_ADDRESS" -O package.tar
				tar -xvf package.tar
				rm package.tar

				cd haproxy-*

				#Pre-reqs
				apt-get install libpcre3-dev libssl-dev -y
				#Compile and install
				make TARGET=linux2628 CPU=generic USE_PCRE=1 USE_OPENSSL=1 USE_ZLIB=1 USE_LINUX_SPLICE=1
				make install

				mkdir /etc/haproxy

				#Exit directory
				cd ..

				#Clean up
				rm -R haproxy-*

				#Install init script as service
				cp /DietPi/dietpi/conf/haproxy_init /etc/init.d/haproxy
				chmod +x /etc/init.d/haproxy
				update-rc.d haproxy defaults

