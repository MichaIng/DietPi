					local fallback_url='https://github.com/Radarr/Radarr/releases/download/v3.0.2.4552/Radarr.master.3.0.2.4552.linux-core-arm64.tar.gz'

				# x86_64
				elif (( $G_HW_ARCH == 10 ))
